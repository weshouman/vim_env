" vim: set syntax=vim

" Setup for using utf-8 in 32 bit systems https://github.com/vim/vim/issues/1446
set encoding=utf-8
set fileencodings=utf-8
set guifont=Consolas:h10
set list
set listchars=eol:↲
scriptencoding utf-8

" Show tabs and spaces, follow https://vi.stackexchange.com/a/430
set list
" short for set listchars
set lcs=tab:␉─,trail:␠,nbsp:⎵

set nu
set rnu


" For the difference between set and let and different types of vars
"   Follow https://learnvimscriptthehardway.stevelosh.com/chapters/19.html
" For a list of vars that should be changed for the tabstop to be set correctly
"   Follow https://vi.stackexchange.com/q/13080/27462
let tablen=3
let &tabstop=tablen
let &softtabstop=tablen
let &shiftwidth=tablen

" Use the following to disable tabs, and only use spaces
" set expandtab

let g:secure_modelines_allowed_items = [
            \ "syntax",
            \ "textwidth",   "tw",
            \ "softtabstop", "sts",
            \ "tabstop",     "ts",
            \ "shiftwidth",  "sw",
            \ "expandtab",   "et",   "noexpandtab", "noet",
            \ "filetype",    "ft",
            \ "foldmethod",  "fdm",
            \ "readonly",    "ro",   "noreadonly", "noro",
            \ "rightleft",   "rl",   "norightleft", "norl",
            \ "spell",
            \ "spelllang"
            \ ]


" Show file options above the command line
" For fuzzy searching multiple files
" Follow https://gist.github.com/csswizardry/9a33342dace4786a9fee35c73fa5deeb
set wildmenu

" enable highlighting searched keyword
set hls

